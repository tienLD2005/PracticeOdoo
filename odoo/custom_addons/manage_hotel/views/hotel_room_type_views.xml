<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hotel_room_type_tree" model="ir.ui.view">
        <field name="name">hotel.room.type.tree</field>
        <field name="model">hotel.room.type</field>
        <field name="arch" type="xml">
            <tree string="Loại phòng">
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>

    <record id="view_hotel_room_type_form" model="ir.ui.view">
        <field name="name">hotel.room.type.form</field>
        <field name="model">hotel.room.type</field>
        <field name="arch" type="xml">
            <form string="Loại phòng">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Danh sách phòng">
                            <field name="room_ids" nolabel="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="floor"/>
                                    <field name="price_per_night"/>
                                    <field name="status"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hotel_room_type" model="ir.actions.act_window">
        <field name="name">Loại phòng</field>
        <field name="res_model">hotel.room.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo loại phòng mới!
            </p>
        </field>
    </record>
</odoo>
