<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hotel_customer_tree" model="ir.ui.view">
        <field name="name">hotel.customer.tree</field>
        <field name="model">hotel.customer</field>
        <field name="arch" type="xml">
            <tree string="Danh sách khách hàng" default_order="name">
                <field name="name"/>
                <field name="identity_card"/>
                <field name="phone"/>
            </tree>
        </field>
    </record>

    <record id="view_hotel_customer_form" model="ir.ui.view">
        <field name="name">hotel.customer.form</field>
        <field name="model">hotel.customer</field>
        <field name="arch" type="xml">
            <form string="Khách hàng">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Tên khách hàng"/></h1>
                    </div>
                    <group>
                        <group string="Thông tin">
                            <field name="identity_card"/>
                            <field name="phone"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Lịch sử đặt phòng">
                            <field name="booking_ids" nolabel="1">
                                <tree>
                                    <field name="code"/>
                                    <field name="room_id"/>
                                    <field name="check_in"/>
                                    <field name="check_out"/>
                                    <field name="total_amount"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hotel_customer_search" model="ir.ui.view">
        <field name="name">hotel.customer.search</field>
        <field name="model">hotel.customer</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm khách hàng">
                <field name="name" string="Tên"/>
                <field name="phone" string="SĐT"/>
                <field name="identity_card" string="CMND/CCCD"/>
            </search>
        </field>
    </record>

    <record id="action_hotel_customer" model="ir.actions.act_window">
        <field name="name">Khách hàng</field>
        <field name="res_model">hotel.customer</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo khách hàng mới!
            </p>
        </field>
    </record>
</odoo>
